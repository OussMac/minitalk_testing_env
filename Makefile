#-------------------------------------- Variables ------------------------------------------------#

CC = cc
FLAGS = -Wall -Wextra -Werror
NAME = mt_lib.a
LINK = ar rcs
HEADER = mt_lib.h

#------------------------------- Source and Object Files -----------------------------------------#

SRC = inc/utils.c
OBJ = $(SRC:.c=.o)

#--------------------------------------- Rules ---------------------------------------------------#

all: $(NAME)

$(NAME): $(OBJ)
	$(LINK) $@ $^

%.o: %.c $(HEADER)
	$(CC) -c $< -o $@

#--------------------------------------- Clean Up ------------------------------------------------#

fclean: clean
	rm -rf $(NAME)

clean:
	rm -f $(OBJ)

re: fclean all

#--------------------------------------- File Conflict --------------------------------------------#

.PHONY: clean